@model dynamic

<h4>Update Avatar & Banner</h4>
<form asp-controller="Settings" asp-action="UploadImages" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Upload Avatar</label>
        <input type="file" name="avatar" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Upload Banner</label>
        <input type="file" name="banner" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Images</button>
</form>